{
	"name": "@jmodule/devtool",
	"version": "1.0.0",
	"description": "JModule 调试工具",
	"author": "feirpri <feirpri@gmail.com>",
	"license": "MIT",
	"scripts": {
		"build": "parcel build --no-content-hash --no-source-maps --dist-dir dist --no-cache --detailed-report 0",
		"lint:css": "stylelint source/**/*.css",
		"lint:js": "xo",
		"watch": "parcel watch --no-cache --no-hmr"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "browser"
				}
			]
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"vue": "3"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.5.0",
		"@parcel/optimizer-data-url": "^2.5.0",
		"@parcel/transformer-inline-string": "^2.5.0",
		"@parcel/transformer-vue": "^2.5.0",
		"parcel": "^2.5.0",
		"stylelint": "^14.6.0",
		"stylelint-config-xo": "^0.21.0",
		"webextension-polyfill": "^0.9.0",
		"xo": "^0.48.0"
	},
	"webExt": {
		"sourceDir": "dist",
		"run": {
			"startUrl": [
				"http://localhost:8080"
			]
		}
	},
	"targets": {
		"defaults": {
			"source": "source/manifest.json",
			"distDir": "dist"
		},
		"devtools": {
			"source": "source/devtools/app/index.html",
			"distDir": "dist/devtools",
			"publicUrl": "/devtools"
		}
	}
}
