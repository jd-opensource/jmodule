{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2020"],
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "h",
        "noUnusedLocals": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": false,
        "strict": true,
        "allowJs": true,
        "target": "es5",
        "downlevelIteration": true,
        "declaration": true,
        "declarationDir": "./types",
        "strictFunctionTypes": false,
        "module": "esnext"
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}