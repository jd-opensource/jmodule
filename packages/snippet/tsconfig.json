{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2020"],
        "sourceMap": true,
        "noUnusedLocals": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": false,
        "strict": true,
        "allowJs": true,
        "target": "esnext",
        "downlevelIteration": true,
        "declaration": true,
        "declarationDir": "./types",
        "noEmitHelpers": true
    },
    "include": [
        "src/type.d.ts",
        "src/global.d.ts",
        "src/utils/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "types/*.d.ts"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}